<link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-price.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-best-sellers.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-card.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-price.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-best-sellers.css' | asset_url | stylesheet_tag }}</noscript>

<script src="{{ 'section-best-sellers.js' | asset_url }}" defer></script>

<best-seller class="best-sellers">
  <div class="page-width">
    <div class="best-sellers__header">
      <div class="best-sellers__heading">
        {%- if section.settings.headline != blank -%}
          <h2 class="best-sellers__title">{{ section.settings.headline }}</h2>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          <p class="best-sellers__text body--large">{{ section.settings.text }}</p>
        {%- endif -%}
      </div>
      {%- if section.settings.button_url != blank and section.settings.button_label != blank -%}
        <div class="best-sellers__btn__wrapper best-sellers__btn__wrapper-desktop">
          <a href="{{ section.settings.button_url }}" class="btn btn-primary">{{ section.settings.button_label }}</a>
        </div>
      {%- endif -%}
    </div>
  </div>
  <div class="top-sellerc__slider-wrapper">
   <div class="best-sellers__slider splide js-slider">
      <div class="splide__track">
        <ul class="best-sellers__splide__list splide__list"  role="list">
          {% if section.settings.button_url != blank %}
            {%- for block in section.blocks -%}
              {%- assign product = block.settings.product -%}
              <li class="best-sellers__splide__slide splide__slide" tabindex="-1">
                {% render 'product-card',
                  product_card_product: product,
                %}
              </li>
            {% endfor %}
          {% endif %}
        </ul>
      </div>

      <div class="splide-progress slider-best-sellers-progress">
        <div class="splide-progress-bar slider-best-sellers-progress-bar js-progesss-bar"></div>
      </div>
      <div class="splide__arrows">
        <button class="splide__arrow splide__arrow--prev" type="button" aria-controls="splide02-track" aria-label="Go to last slide">
          {% render 'icon-prev-slider' %}
        </button>
        <button class="splide__arrow splide__arrow--next" type="button" aria-controls="splide02-track" aria-label="Next slide">
          {% render 'icon-next-slider' %}
        </button>
      </div>
    </div>
    {%- if section.settings.button_url != blank and section.settings.button_label != blank -%}
        <div class="best-sellers__btn__wrapper best-sellers__btn__wrapper-mobile">
          <a href="{{ section.settings.button_url }}" class="btn btn-primary">{{ section.settings.button_label }}</a>
        </div>
    {%- endif -%}



  </div>
</best-seller>

{% schema %}
{
  "name": "t:sections.best-sellers.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "default": "Best sellery",
      "label": "t:sections.best-sellers.settings.heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "t:sections.best-sellers.settings.text"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "View all",
      "label": "t:sections.best-sellers.settings.button_label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "t:sections.best-sellers.settings.button_url"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "t:sections.best-sellers.blocks.name",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "t:sections.best-sellers.blocks.name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.best-sellers.name",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}